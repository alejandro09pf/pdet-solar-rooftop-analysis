# Environment Variables for PDET Solar Rooftop Analysis
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# =============================================================================
# Database Credentials
# =============================================================================

# PostgreSQL password
DB_PASSWORD=your_secure_password_here

# Optional: Override database connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=pdet_solar_analysis
# DB_USER=postgres

# =============================================================================
# Data Paths
# =============================================================================

# Path to raw data (downloaded datasets)
DATA_RAW_PATH=./data/raw

# Path to processed data
DATA_PROCESSED_PATH=./data/processed

# Path to results and outputs
RESULTS_PATH=./results

# =============================================================================
# External APIs (if needed)
# =============================================================================

# Microsoft Planetary Computer API Key (if required for data access)
# MS_PLANETARY_COMPUTER_API_KEY=your_api_key_here

# Google Cloud credentials (if using Google Cloud Storage for datasets)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# =============================================================================
# Logging and Debugging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable SQL echo (for debugging)
SQL_ECHO=false

# =============================================================================
# Project Settings
# =============================================================================

# Project root directory (usually auto-detected)
# PROJECT_ROOT=./

# Number of parallel workers for data processing
PARALLEL_WORKERS=4
